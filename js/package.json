{
  "name": "alternis-js",
  "version": "0.1.0",
  "description": "javascript bindings for the wasm version of the alternis dialogue engine",
  "main": "dist/alternis.umd.cjs",
  "module": "dist/alternis.js",
  "typings": "dist/alternis.d.ts",
  "type": "module",
  "files": [
    "dist",
    "package.json"
  ],
  "exports": {
    ".": {
      "require": "./dist/alternis.umd.cjs",
      "import": "./dist/alternis.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build-dev": "vite build --mode development",
    "build": "vite build --mode production",
    "typecheck": "tsc -p . --noEmit //FIXME",
    "test": "cross-env TS_NODE_PROJECT=./tests/tsconfig.json mocha --config mocharc.json 'tests/**/*.test.ts'"
  },
  "keywords": [
    "alternis",
    "dialogue",
    "dialogue-engine"
  ],
  "author": {
    "name": "Michael Belousov",
    "email": "me@mikemikeb.com"
  },
  "license": "MIT",
  "dependencies": {
    "alternis-wasm": "workspace:^"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.2",
    "@types/node": "^20.8.2",
    "cross-env": "^7.0.3",
    "mocha": "^10.2.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vite-plugin-dts": "^3.6.0"
  }
}
